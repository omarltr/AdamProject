	<body>

		<main>
			{% block stylesheets %}

				<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
			{% endblock %}
			<div class="container">

				<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
					<div class="container">
						<div class="row justify-content-center">
							<div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

								<div class="d-flex justify-content-center py-4">
									<a href="index.html" class="logo d-flex align-items-center w-auto">
										<span class="d-none d-lg-block" style="color: #00B98E;">Darsif</span>
									</a>
								</div>
								<!-- End Logo -->

								<div class="card mb-3">

									<div class="card-body">

										<div class="pt-4 pb-2">
											<h5 class="card-title text-center pb-0 fs-4">Créer un compte</h5>
											<p class="text-center small">Entrez vos données personnelles pour créer un compte</p>
										</div>

										{{ form_start(registrationForm, {'attr': {'class': 'row g-3 needs-validation', 'novalidate': 'novalidate'}}) }}
										<div class="col-12">
											<label for="yourName" class="form-label">
												Votre nom
											</label>
											{{ form_errors(registrationForm.nom) }}
											{{ form_widget(registrationForm.nom, { 'attr': {'class': 'form-control', 'id': 'yourName', 'required': 'required'} }) }}
										</div>
										<div class="col-12">
											<label for="yourName" class="form-label">
												Votre prenom
											</label>
											{{ form_errors(registrationForm.prenom) }}
											{{ form_widget(registrationForm.prenom, { 'attr': {'class': 'form-control', 'id': 'yourName', 'required': 'required'} }) }}
										</div>
										<div class="col-12">
											<label for="yourEmail" class="form-label">
												Votre adresse électronique
											</label>
											{{ form_errors(registrationForm.email) }}
											{{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control', 'id': 'yourEmail', 'required': 'required'} }) }}
										</div>
										<div class="col-12">
											<label for="yourEmail" class="form-label">
												Votre numéro telephone
											</label>
											{{ form_errors(registrationForm.n_telephone) }}
											{{ form_widget(registrationForm.n_telephone, { 'attr': {'class': 'form-control', 'id': 'yourtel', 'required': 'required'} }) }}
										</div>
										<div class="col-12">
											<label for="date_de_naissance" class="form-label">Votre Date de naissance</label>
											{{ form_errors(registrationForm.date_de_naissance) }}

											{{ form_widget(registrationForm.date_de_naissance) }}
										</div>


										<div class="col-12">
											<label for="photo" class="form-label">
												Votre photo de Profile
											</label>
											{{ form_errors(registrationForm.photo) }}
											{{ form_widget(registrationForm.photo, { 'attr': {'class': 'form-control', 'id': 'photo'} }) }}
										</div>
										<div class="col-12">
											<label for="yourPassword" class="form-label">Password</label>
											{{ form_errors(registrationForm.plainPassword) }}
											{{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control', 'id': 'yourPassword', 'required': 'required'} }) }}
										</div>

										<div class="col-12">
											<div class="form-check">
												{{ form_widget(registrationForm.agreeTerms, {'id': 'acceptTerms', 'attr': {'class': 'form-check-input'}}) }}
												<label class="form-check-label" for="acceptTerms">I agree and accept the
													<a href="#">terms and conditions</a>
												</label>
											</div>
											<pstyle="color:#00B98E">{{ form_errors(registrationForm.agreeTerms) }}</p>
										</div>


										<div class="col-12">
											<button type="submit" class="btn btn-primary w-100" style="background-color: #00B98E; color: #FFFFFF;">Register</button>
										</div>

										{{ form_end(registrationForm) }}
										<div class="col-12">
											<p class="small mb-0">Already have an account?
												<a href="{{ path('app_login') }}" style="color:#00B98E">connexion</a>
											</p>
										</div>
									</form>

								</div>
							</div>


						</div>
					</div>
				</div>


			</section>

		</div>
	</body>
