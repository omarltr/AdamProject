{% extends 'base2.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block header %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Reclamation</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_reclamation') }}">Reclamation</a></li>
                        <li class="breadcrumb-item active">Détail</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow-sm border">
            <div class="card-header">
                <h3>Détails de la Réclamation</h3>
            </div>
            <div class="row no-gutters">
                <!-- Colonne pour l'image de l'utilisateur -->
                <div class="col-lg-4 d-flex align-items-center justify-content-center p-4">
                    <img src="{{ asset('uploads/Profilephoto/' ~ reclamation.user.photo) }}" class="img-fluid rounded mb-3" alt="Photo de l'utilisateur">
                </div>
                <!-- Colonne pour les détails de la réclamation -->
                <div class="col-lg-8 p-4">
                    <table class="table table-striped table-bordered">
                        <tbody>
                            <tr>
                                <th scope="row">Date de Réclamation</th>
                                <td>{{ reclamation.dateReclamation ? reclamation.dateReclamation|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Description</th>
                                <td>{{ reclamation.description }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="mt-3">
                        <a href="{{ path('app_reclamation') }}" class="btn btn-secondary">Retour à la liste</a>
                        <a href="{{ path('app_user_show_admin', {'id': reclamation.user.id}) }}" class="btn btn-primary ml-2">Voir Détail Utilisateur</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
