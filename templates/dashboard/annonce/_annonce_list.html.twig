<table class="table table-striped projects">
	<thead>
		<tr>
			<th style="width: 1%">#</th>
			<th style="width: 20%">Client</th>
			<th style="width: 30%">Nom de l'annonce</th>
			<th style="width: 10%">Date DÃ©but</th>
			<th style="width: 10%">Date Fin</th>
			<th style="width: 5%">Prix</th>
			<th style="width: 5%" class="text-center">Statut</th>
			<th style="width: 10%"></th>
		</tr>


	</thead>
	<tbody>
		{% for annonce in annonces %}
			<tr>
				<td>#</td>
				<td>
					<ul class="list-inline">
						<li class="list-inline-item">
							<img alt="Avatar" class="table-avatar" src="{{ asset('uploads/Profilephoto/' ~ annonce.user.photo ) }}">
						</li>
					</ul>
				</td>
				<td>{{ annonce.nom }}</td>
				<td>{{ annonce.dateDebut ? annonce.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
				<td>{{ annonce.dateFin ? annonce.dateFin|date('Y-m-d H:i:s') : '' }}</td>
				<td style="font-weight: bold;">{{ annonce.prix }}$</td>
				<td>
					{% if annonce.etat ==  1 %}
						<span class="badge badge-success">disponible</span>
					{% else %}
						Non Disponible
					{% endif %}
				</td>
                <td class="project-actions text-right">
					<a class="btn btn-primary btn-sm" href="{{ path('app_annonce_show_admin', {'id': annonce.id}) }}">
						<i class="fas fa-folder"></i>
						View
					</a>
				</td>
			</tr>
		</td>


	{% else %}
		<tr>
			<td colspan="10">no records found</td>
		</tr>
	{% endfor %}
</tbody></table>
