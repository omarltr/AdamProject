{% extends 'base2.html.twig' %}

{% block title %}Détails de l'annonce{% endblock %}

{% block header %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Annonce</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_annonce_admin') }}">Annonce</a></li>
                        <li class="breadcrumb-item active">Détail</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
   
    <div class="container mt-4">
        <div class="card shadow-sm border">
            <div class="card-header">
                <h3>Détails de l'annonce</h3>
            </div>
            <div class="row no-gutters">
                <!-- Colonne pour l'image de l'annonce -->
                <div class="col-lg-6 d-flex align-items-center justify-content-center p-4">
                    <div class="wow fadeInUp" data-wow-delay="0.5s">
                        {% for image in images %}
                            <img src="{{ asset('uploads/images/' ~ image.image ) }}" class="img-fluid rounded mb-3" alt="Image de l'annonce">
                        {% endfor %}
                    </div>
                </div>

                <!-- Colonne pour les détails de l'annonce -->
                <div class="col-lg-6 p-4">
                    <table class="table table-striped table-bordered">
                        <tbody>
                            <tr>
                                <th>Nom</th>
                                <td>{{ annonce.nom }}</td>
                            </tr>
                            <tr>
                                <th>Date de création</th>
                                <td>{{ annonce.dateCreation ? annonce.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ annonce.description }}</td>
                            </tr>
                            <tr>
                                <th>Message</th>
                                <td>{{ annonce.message }}</td>
                            </tr>
                            <tr>
                                <th>Date de début</th>
                                <td>{{ annonce.dateDebut ? annonce.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Date de fin</th>
                                <td>{{ annonce.dateFin ? annonce.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Prix</th>
                                <td >{{ annonce.prix }}</td>
                            </tr>
                            <tr>
                                <th>État</th>
                                <td>{{ annonce.etat }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="mt-3">
                        <a href="{{ path('app_annonce_admin') }}" class="btn btn-secondary">Retour à la liste</a>
                        {{ include('annonce/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
