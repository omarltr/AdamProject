{% extends 'base2.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block header %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Détails de l'utilisateur</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_users_index_admin') }}">Utilisateurs</a></li>
                        <li class="breadcrumb-item active">Détail</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow-sm border">
            <div class="card-header">
                <h3>Détails de l'utilisateur</h3>
            </div>
            <div class="row no-gutters">
                <!-- Colonne pour l'image de l'utilisateur -->
                <div class="col-lg-4 d-flex align-items-center justify-content-center p-4">
                    <img src="{{ asset('uploads/Profilephoto/' ~ user.photo) }}" class="img-fluid rounded mb-3" alt="Photo de profil de l'utilisateur">
                </div>
                <!-- Colonne pour les détails de l'utilisateur -->
                <div class="col-lg-8 p-4">
                    <table class="table table-striped table-bordered">
                        <tbody>
                            <tr>
                                <th scope="row">Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Nom</th>
                                <td>{{ user.nom }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Prénom</th>
                                <td>{{ user.prenom }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Numéro de Téléphone</th>
                                <td>{{ user.nTelephone }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Date de Naissance</th>
                                <td>{{ user.dateDeNaissance ? user.dateDeNaissance|date('d/m/Y') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="mt-3">
                        <a href="{{ path('app_users_index_admin') }}" class="btn btn-secondary">Retour à la liste</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
