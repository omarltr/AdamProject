<table class="table table-striped projects">
	<thead>
		<tr>
			<th style="width: 1%">#</th>
			<th style="width: 20%">Photo</th>
			<th style="width: 20%">Nom</th>
			<th style="width: 20%">Prénom</th>
			<th style="width: 20%">Email</th>
			<th style="width: 20%">Numéro de téléphone</th>
			<th style="width: 20%">Date de naissance</th>
			<th style="width: 20%">User Role
			</th>


			<th style="width: 20%"></th>
		</tr>
	</thead>
	<tbody>
		{% for user in users %}
			<tr>
				<td>#</td>
				<td>
					{% if user.photo %}
						<img src="{{ asset('uploads/Profilephoto/' ~ user.photo) }}" class="img-fluid rounded" alt="Photo de profil" style="width: 50px; height: 50px;">
					{% endif %}
				</td>
				<td>{{ user.nom }}</td>
				<td>{{ user.prenom }}</td>
				<td>{{ user.email }}</td>
				<td>{{ user.nTelephone }}</td>
				<td>{{ user.dateDeNaissance ? user.dateDeNaissance|date('d/m/Y') : '' }}</td>
				<td>
					{% if user.getRoles is iterable %}
						{% set roles = user.getRoles %}
						{% if 'ROLE_ADMIN' in roles %}
							Admin
						{% else %}
							Client
						{% endif %}
					{% else %}
						No roles available
					{% endif %}
				</td>

				<td class="project-actions text-right">
					<a class="btn btn-primary btn-sm" href="{{ path('app_user_show_admin', {'id': user.id}) }}">
						<i class="fas fa-folder"></i>
						View
					</a>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="8">Aucun utilisateur trouvé</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
