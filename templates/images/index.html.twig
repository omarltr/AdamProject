{% extends 'base.html.twig' %}

{% block title %}Images index{% endblock %}

{% block body %}
    <h1>Images index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Is_principal</th>
                <th>Alt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td>{{ image.image }}</td>
                <td>{{ image.isPrincipal ? 'Yes' : 'No' }}</td>
                <td>{{ image.alt }}</td>
                <td>
                    <a href="{{ path('app_images_show', {'id': image.id}) }}">show</a>
                    <a href="{{ path('app_images_edit', {'id': image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_images_new') }}">Create new</a>
{% endblock %}
