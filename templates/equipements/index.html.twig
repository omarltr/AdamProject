{% extends 'base.html.twig' %}

{% block title %}Equipements index{% endblock %}

{% block body %}
    <h1>Equipements index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Icon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipement in equipements %}
            <tr>
                <td>{{ equipement.id }}</td>
                <td>{{ equipement.nom }}</td>
                <td>{{ equipement.icon }}</td>
                <td>
                    <a href="{{ path('app_equipements_show', {'id': equipement.id}) }}">show</a>
                    <a href="{{ path('app_equipements_edit', {'id': equipement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_equipements_new') }}">Create new</a>
{% endblock %}
